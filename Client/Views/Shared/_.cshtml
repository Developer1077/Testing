@model Product
<div class="card h-100 shadow-sm">
    <img src="@Model.PictureUrl" alt="@Model.Name" class="img-fluid bg-info" />
    <div class="card-body d-flex flex-column">
        <a href="#">
            <h6 class="text-uppercase"><a asp-action="productdetails" asp-route-id="@Model.Id" asp-controller="shop">@Model.Name</a></h6>
        </a>
        <span class="mb-2">$@Model.Price.ToString("0.00")</span>
        <div class="btn-group mt-auto" style="width:100%">
            <a type="button" asp-controller="basket" asp-action="AddItemToBasket" asp-route-productId="@Model.Id"  class="btn btn-sm btn-outline-secondary mr-2"  style="width:50%"><i class= "fa fa-shopping-cart fa-2x mr-2"></i></a>
            <a type="button" asp-controller="shop" asp-action="productdetails" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-secondary" style="width:50%">View</a>
        </div>
    </div>
</div>
