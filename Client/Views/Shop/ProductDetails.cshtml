@model Product
@{
    ViewData["Title"] = Model.Name;
    ViewData["BreadCrumbs"] = new List<BreadCrumb>() {
        new BreadCrumb() { Title = "Home", IsActive = false, Link ="/Home/" },
        new BreadCrumb() { Title = "Shop", IsActive = false, Link ="/Shop/" },
        new BreadCrumb() { Title = Model.Name, IsActive = true }
    };

}
<div class="container">
    <div class="row">
        <div class="col-6">
            <img src="@Model.PictureUrl" alt="@Model.Name" class="img-fluid w-100" />
        </div>
        <div class="col-6">
            <h3>@Model.Name</h3>
            <p>@Model.Price</p>
            <div class="d-flex justify-content-start align-items-center">
                <i class="fa fa-minus-circle text-warning mr-2" style="cursor:pointer; font-size:2em;"></i>
                <span class="font-weight-bold" style="font-size: 1.5em;">2</span>
                <i class="fa fa-plus-circle text-warning mx-2" style="cursor:pointer; font-size:2em;"></i>
                <button class="btn btn-outline-secondary btn-lg ml-4">Add to Cart</button>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12 ml-3">
            <h4>Description</h4>
            <p>@Model.Description</p>
        </div>
    </div>
</div>

