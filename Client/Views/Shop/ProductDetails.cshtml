@model ProductQuantityViewModel
@{
    ViewData["Title"] = Model.Product.Name;
    ViewData["BreadCrumbs"] = new List<BreadCrumb>() {
        new BreadCrumb() { Title = "Home", IsActive = false, Link ="/Home/" },
        new BreadCrumb() { Title = "Shop", IsActive = false, Link ="/Shop/" },
        new BreadCrumb() { Title = Model.Product.Name, IsActive = true }
    };

 
}
<div class="container">
    <div class="row">
        <div class="col-6">
            <img src="@Model.Product.PictureUrl" alt="@Model.Product.Name" class="img-fluid w-100" />
        </div>
        <div class="col-6">
            <h3>@Model.Product.Name</h3>
            <p>@Model.Product.Price</p>
            <div class="d-flex justify-content-start align-items-center">
                <div class="d-flex align-items-center">
                    <a asp-controller="shop" asp-action="DecrementQuantity" asp-route-quantity="@Model.Quantity" asp-route-id="@Model.Product.Id"><i class="fa fa-minus-circle text-warning mr-2" style="cursor:pointer; font-size:2em;"></i></a>
                    <span class="font-weight-bold" style="font-size: 1.5em;">@Model.Quantity</span>
                    <a asp-controller="shop" asp-action="IncrementQuantity"  asp-route-quantity="@Model.Quantity" asp-route-id="@Model.Product.Id"><i class="fa fa-plus-circle text-warning mx-2" style="cursor:pointer; font-size:2em;"></i></a>
                </div>
                <a class="btn btn-outline-secondary btn-lg ml-4" asp-controller="basket" asp-action="AddItemToBasket" asp-route-productId="@Model.Product.Id" asp-route-quantity="@Model.Quantity">Add to Cart</a>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12 ml-3">
            <h4>Description</h4>
            <p>@Model.Product.Description</p>
        </div>
    </div>
</div>

